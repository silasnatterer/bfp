<?xml version="1.0" encoding="UTF-8" ?>
<precice-configuration>
  <log>
    <sink
      filter="%Severity% > debug"
      format="---[precice] %ColorizedSeverity% %Message%"
      enabled="true" />
  </log>

  <solver-interface dimensions="3">
    <data:scalar name="var" />

    <mesh name="MuscleMesh">
       <use-data name="var"/>
    </mesh>

    <mesh name="FibersMesh">
      <use-data name="var" />
    </mesh>

    <participant name="Fibers">
      <use-mesh name="FibersMesh" provide="yes" />
      <write-data name="var" mesh="FibersMesh" />
    </participant>
    
    <participant name="Muscle">
      <use-mesh name="FibersMesh" from="Fibers"/>
      <use-mesh name="MuscleMesh" provide="yes"/>
      <mapping:rbf-compact-polynomial-c6
        direction="read" 
        from="FibersMesh" 
        to="MuscleMesh" 
        constraint="consistent" 
        timing="initial" 
	support-radius="0.5"
      />  
      <read-data name="var" mesh="MuscleMesh"/>
      <export:vtk directory="output" every-n-time-windows="1"/>
    </participant>

    <m2n:sockets from="Fibers" to="Muscle" exchange-directory=".."/>

    <coupling-scheme:serial-explicit>
      <participants first="Fibers" second="Muscle" />
      <time-window-size value="1e0" />
      <max-time value="50" />
      <exchange data="var" mesh="FibersMesh" from="Fibers" to="Muscle"/>
    </coupling-scheme:serial-explicit>
  </solver-interface>
</precice-configuration>

