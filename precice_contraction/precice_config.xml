<?xml version="1.0"?>

<precice-configuration>
  <log>
    <sink type="stream" output="stdout"  filter='(%Severity% >= debug) and (not (%Function% = "advance")) and (%Rank% = 0)' format="\033[0;33m%Rank% [precice]\033[0m %ColorizedSeverity%\033[0;33m%Message%\033[0m" enabled="true" />
  </log>

  <solver-interface dimensions="3">
    <data:vector name="Geometry"/>
    <data:scalar name="Gamma"/>

    <mesh name="FastMonodomainMesh">
      <use-data name="Geometry"/>
      <use-data name="Gamma"/>
    </mesh>

    <mesh name="MuscleContractionMesh">
      <use-data name="Geometry"/>
      <use-data name="Gamma"/>
    </mesh>

    <participant name="FastMonodomain">
      <use-mesh name="FastMonodomainMesh" provide="yes"/>
      <use-mesh name="MuscleContractionMesh" from="MuscleContraction"/>
      
      <write-data name="Gamma" mesh="FastMonodomainMesh"/>
      <read-data  name="Geometry" mesh="FastMonodomainMesh"/>

      <export:vtk directory="precice-output" every-n-time-windows="10"  />

      <!--<mapping:rbf-gaussian 
        direction="read" 
        from="MuscleContractionMesh" 
        to="FastMonodomainMesh" 
        constraint="consistent" 
        timing="initial" 
        shape-parameter="91.05"
      />-->
      
     <mapping:rbf-compact-polynomial-c6
        direction="read" 
        from="MuscleContractionMesh" 
        to="FastMonodomainMesh" 
        constraint="consistent" 
        timing="initial" 
        support-radius="0.5"  
     />
    </participant>
    
    <participant name="MuscleContraction">
      <use-mesh name="MuscleContractionMesh" provide="yes"/>
      <use-mesh name="FastMonodomainMesh" from="FastMonodomain"/>

      <write-data name="Geometry" mesh="MuscleContractionMesh"/>
      <read-data  name="Gamma"    mesh="MuscleContractionMesh"/>
      
      <export:vtk directory="precice-output" every-n-time-windows="10"  />

      <!-- <mapping:rbf-gaussian 
        direction="read" 
        from="FastMonodomainMesh" 
        to="MuscleContractionMesh" 
        constraint="consistent" 
        timing="initial" 
        shape-parameter="151.74"
      />-->

     <mapping:rbf-compact-polynomial-c6
        direction="read" 
        from="FastMonodomainMesh" 
        to="MuscleContractionMesh" 
        constraint="consistent" 
        timing="initial" 
        support-radius="0.1"  
      />  
    </participant>

    <m2n:sockets from="FastMonodomain" to="MuscleContraction" network="lo"/>

    <coupling-scheme:serial-explicit>
      <participants first="FastMonodomain" second="MuscleContraction"/>
      <max-time value="100.0"/>           
      <time-window-size value="1e0"/>
      
      <exchange data="Gamma"    mesh="FastMonodomainMesh" from="FastMonodomain" to="MuscleContraction"/>
      <exchange data="Geometry" mesh="MuscleContractionMesh" from="MuscleContraction" to="FastMonodomain"/>
    </coupling-scheme:serial-explicit>
  </solver-interface>
</precice-configuration>
